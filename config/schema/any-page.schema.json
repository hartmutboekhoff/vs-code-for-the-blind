        },
        {
          "const": "related",
          "title": "Verknüpfte Artikel",
          "description": "Artikel, die mit dem aktuellen Artikel verknüpft sind"
        }
      ]
    },
    "ComponentParams": {
      "type": "object",
      "additionalProperties": true,
      "$comment": "backend only passes this to playout",
      "properties": {
        "label": {
          "type": "string",
