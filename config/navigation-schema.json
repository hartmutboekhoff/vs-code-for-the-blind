{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "properties": {
    "metaNav": {
      "type": "array",
      "items": { "$ref": "#/definitions/Navigation" }
    },
    "mainNav": {
      "type": "array",
      "items": { "$ref": "#/definitions/Navigation" }
    },
    "mainNavThemes": {
      "type": "array",
      "items": { "$ref": "#/definitions/MenuItem" }
    },
    "abo": { "$ref": "#/definitions/MenuItem" },
    "plusContent": {
      "type": "object",
      "properties": {
        "label": { "type": "string" },
        "path": { "type": "string" },
        "type": { "type": "string", "enum": ["internal", "external"] },
        "plusIcon": { "type": "boolean" }
      },
      "required": ["label", "path", "type", "plusIcon"]
    },
    "footerNav": {
      "type": "array",
      "items": { "$ref": "#/definitions/Navigation" }
    }
  },
  "definitions": {
    "Navigation": {
      "type": "object",
      "properties": {
        "label": { "type": "string" },
        "path": { "type": "string" },
        "type": { "type": "string", "enum": ["internal", "external"] },
        "subMenu": {
          "type": "array",
          "items": { "$ref": "#/definitions/MenuItem" }
        }
      },
      "required": ["label", "path", "type"]
    },
    "MenuItem": {
      "type": "object",
      "properties": {
        "label": { "type": "string" },
        "path": { "type": "string" },
        "type": { "type": "string", "enum": ["internal", "external"] }
      },
      "required": ["label", "path", "type"],
      "additionalProperties": false
    }
  }
}
