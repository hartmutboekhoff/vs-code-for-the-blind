{
  "name": "spark-siteconfig-vscode-plugin",
  "displayName": "Spark Siteconfig Editor",
  "publisher": "funkeservices",
  "description": "",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.82.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [],
  "main": "./src/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "SparkSiteConfig.helloWorld",
        "title": "Hello World"
      },
      {
        "command": "SparkSiteConfig.FactoryDiagnostics",
        "title": "Factory Diagnostics"
      }
    ],
    "customEditors": [
      {
        "viewType": "SparkSiteConfig.MenuEditor",
        "displayName": "Men√º Editor",
        "selector": [
          {
            "filenamePattern": "**/menu/*.json"
          }
        ]
      },
      {
        "viewType": "SparkSiteConfig.PageConfigEditor",
        "displayName": "Page-Config Editor",
        "selector": [
          {
            "filenamePattern": "**/pages/escenic/*.json"
          }
        ]
      },
      {
        "viewType": "SparkSiteConfig.RedirectsEditor",
        "displayName": "Redirects Editor",
        "selector": [
          {
            "filenamePattern": "redirects.json"
          }
        ]
      },
      {
        "viewType": "SparkSiteConfig.JsonView",
        "displayName": "JSON Viewer",
        "selector": [
          {
            "filenamePattern": "*.json"
          }
        ]
      },
      {
        "viewType": "SparkSiteConfig.GenericSchemaEditor",
        "displayName": "Generic Schema Editor",
        "selector": [
          {
            "filenamePattern": "**/pages/*.json"
          }
        ]
      }
      

    ],
    "configuration": {
      "title": "Spark Siteconfig Editor",
      "properties": {
        "SparkSiteeconfigEditor.developerMode": {
          "type": "boolean",
          "default": false,
          "description": "Enable eeveloer-mode to highligt special elements in the editor-view"
        }
      }
    }
  },
  "scripts": {
    "lint": "eslint .",
    "pretest": "npm run lint",
    "test": "node ./test/runTest.js"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.1",
    "@types/node": "16.x",
    "@types/vscode": "^1.82.0",
    "@vscode/test-electron": "^2.3.4",
    "eslint": "^8.47.0",
    "glob": "^10.3.3",
    "mocha": "^10.2.0",
    "typescript": "^5.1.6"
  },
  "dependencies": {
    "deep-diff": "^1.0.2"
  }
}
